{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/nf-core/nanocall/master/assets/schema_input.json",
    "title": "nf-core/nanocall pipeline - params.input schema",
    "description": "Schema for the file provided with params.input",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "sample": {
                "type": "string",
                "pattern": "^\\S+$",
                "errorMessage": "Sample name must be provided and cannot contain spaces",
                "meta": ["id"]
            },
            "flowcell_id": {
                "type": "string",
                "errorMessage": "Flowcell ID must be provided"
            },
            "barcode": {
                "type": "integer",
                "errorMessage": "Barcode must be an integer"
            },
            "genome": {
                "type": "string",
                "format": "file-path",
                "errorMessage": "Genome assembly or path must be provided"
            }
        },
        "required": ["sample", "genome"]
    }
}
